CC       = g++
CXX	 = g++

#-include $(PIN_HOME)/makefile.gnu.config

OPT ?= -g -O0 -I ${PIN_HOME} #-O3

CXXFLAGS := -ansi -Wall ${PIN_CXXFLAGS} ${OPT}
#LDLIBS   := ${PIN_LPATHS} ${PIN_LIBS} 
#LDFLAGS  := ${PIN_LDFLAGS}

EXE      := loopprof
SOURCES  := loopprof.C
DEPENDS  := loopprof_path.C loopprof.H
OBJS     := $(addsuffix .o, $(basename $(SOURCES)))

all: ${EXE}

${EXE}: ${OBJS}

${OBJS}: ${DEPENDS}

## cleaning
clean:
	rm -f *.o ${EXE}
